{
    "name": "sitehandy/omnipay-toyyibpay",
    "type": "library",
    "description": "toyyibPay driver for the Omnipay payment processing library",
    "keywords": [
        "gateway",
        "merchant",
        "omnipay",
        "pay",
        "payment",
        "toyyibpay",
        "malaysia",
        "fpx"
    ],
    "homepage": "https://github.com/sitehandy/omnipay-toyyibpay",
    "license": "MIT",
    "authors": [
        {
            "name": "Amirol Zolkifli",
            "email": "amirol@sitehandy.com"
        }
    ],
    "autoload": {
        "psr-4": { 
            "Omnipay\\ToyyibPay\\" : "src/" 
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Omnipay\\ToyyibPay\\Tests\\" : "tests/"
        }
    },
    "require": {
        "php": "^7.4 || ^8.0",
        "omnipay/common": "^3.0",
        "ext-curl": "*",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.0",
        "php-http/guzzle7-adapter": "^1.0",
        "psr/http-factory-implementation": "^1.0",
        "nyholm/psr7": "^1.8",
        "php-http/message": "^1.16"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0 || ^10.0 || ^11.0",
        "squizlabs/php_codesniffer": "^3.5",
        "mockery/mockery": "^1.4"
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "prefer-stable": true,
    "minimum-stability": "dev",
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
